@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Uye olan kullanıcı görebilir</h3>
<a class="btn btn-primary" asp-action="Logout">Çıkış Yap</a>
<a class="btn btn-success" asp-action="GetRefreshToken">Refresh Token Update</a>

<h4>Claim Dataları</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in User.Claims)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>

<h4>Authentication Dataları</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth Key</th>
            <th>Auth Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>